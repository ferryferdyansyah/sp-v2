{
  "name": "serah-peta",
  "version": "1.0.0",
  "description": "Aplikasi Automation Serah Peta",
  "main": "electron/main.js",
  "scripts": {
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "electron:dev": "concurrently \"npm run client:dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run client:build && electron-builder",
    "test:server": "node electron/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.serahpeta.app",
    "productName": "SerahPeta",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "client/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/playwright",
        "to": "playwright",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "icon": "build/ico.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "playwright": "^1.56.1",
    "portfinder": "^1.0.38",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  }
}
